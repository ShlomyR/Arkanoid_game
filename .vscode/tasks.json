{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/sourcefiles/*.cpp",
                "${workspaceFolder}/src/sourcefiles/Commands/*.cpp",
                "${workspaceFolder}/src/sourcefiles/Parser/*.cpp",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/test",
                "-pthread",
                "-lsfml-graphics", 
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-lboost_filesystem",
                "-I${workspaceFolder}/src/hederfiles",
                "-I${workspaceFolder}/src/hederfiles/Commands",
                "-I${workspaceFolder}/src/hederfiles/Parser",
                "-I${workspaceFolder}/src/hederfiles/Interfaces"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-9 build active file",
            "command": "/usr/bin/g++-9",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        
    ],
    "version": "2.0.0"
}
